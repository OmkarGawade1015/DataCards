
<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./Partials/Headabc') %>
    <title>Blog</title>
    <meta name="viewport" content="width=device-width, initial scale=1" />
    <link rel="stylesheet" type="text/css" href="../public/styles/blog1.css"/>
</head>
<body>
    <%- include('./Partials/nava') %>  
    <div class="container mt-4">
        <h1><%= blog.title %></h1>
        <!-- Add the class "main-image" to the main blog image -->
        <img src="<%= blog.coverImage %>" class="main-image" width="700px" />
        <pre class="mt-3"><%= blog.body %></pre>
    </div>

    <div class="comment1">
        <img src="<%= blog.createdBy.ProfileImage %>" width="30px" class="comment-img"><%= blog.createdBy.fullName %>
    </div>

    <div class="container mt-3">
        <h1>Comments {<%- comment.length %>}</h1>
        <% if (locals.user) { %>
            <form action="/blog/comment/<%= blog._id %>" method="post">
                <div class="mb-3">
                  <input type="text" name="content" class="form-control" placeholder="Enter Your Comment"/>
                  <button class="btn btn-sm btn-primary" type="submit">Add</button>
                </div>
            </form>
        <% } %>
        
        <div class="mt-3">
            <% comment.forEach(Comments => { %>
                <div>
                    <img src="<%= Comments.createdBy.ProfileImage %>" width="30px"><%= Comments.createdBy.fullName %>
                    <pre><%= Comments.content %></pre> 
                </div>
            <% }) %>
        </div>
    </div>

    <%- include('./Partials/scripts') %>
</body>
</html>
